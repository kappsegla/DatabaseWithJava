<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller">
   <top>
      <FlowPane hgap="3.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="circleButton" mnemonicParsing="false" onAction="#circleClicked" text="Circle" />
            <Button fx:id="rectButton" mnemonicParsing="false" onAction="#rectClicked" text="Rectangle" />
            <Button mnemonicParsing="false" onAction="#lineClicked" text="Line" />
            <ColorPicker fx:id="colorPicker" />
            <TextField fx:id="textField" />
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </FlowPane>
   </top>
   <center>
      <StackPane styleClass="canvas" stylesheets="@style.css">
         <children>
            <Canvas fx:id="canvas" height="400.0" onMouseClicked="#canvasClicked" width="400.0" />
         </children>
      </StackPane>
   </center>
</BorderPane>
